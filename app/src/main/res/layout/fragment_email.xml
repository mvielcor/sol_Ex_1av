<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mviel.pmdm.examen1819.EmailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_email_titol" />

        <EditText
            android:id="@+id/tv_destinatari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Destinatari"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/tv_assumpte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Assumpte"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/tv_missatge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Missatge"
            android:inputType="textPersonName" />
    </LinearLayout>

</FrameLayout>
